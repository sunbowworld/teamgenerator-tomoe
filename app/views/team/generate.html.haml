= render partial: "layouts/side_bar", locals: {steam_users: @steam_users}
.container
  = form_tag("/team", {method: :post, id: "form"}) do
    %input{type: "hidden", name: "group_id", value: "2"}
  .row
    %h3
      setting
    .row
      .col-md-4
        %span.label.label-default
          The number of teams?
        .btn-group
          %button.btn.btn-default.btn-xs.dropdown-toggle.number_of_teams{"data-toggle" => "dropdown"}
            .value{style: "float:left"}
              2
            %div{style: "float:left"}
              %span.caret
          %ul.dropdown-menu
            - for teams_value in 1..4 do
              %li.teams_value
                %a
                  = teams_value
      .col-md-4
        .btn.btn-primary#submit
          Send
      .col-md-4
        .generator
          = image_tag 'generator.jpg', size: '128x128'
    %h3
      selected_users
    .row.tg_area
      .tg_result.row
      .tg_user.row
    .add_form
      %Strong
        ユーザを追加
      .form_steam_id
        = form_tag "/home/add" do
          = text_field_tag "steam_id64s[]"
          = submit_tag "追加", name: nil
      .form_group_id
        %Strong
          グループからユーザを追加
        = form_tag "/steam_user/search_group", method: :get do
          = text_field_tag "group_id"
          = submit_tag "検索", name: nil