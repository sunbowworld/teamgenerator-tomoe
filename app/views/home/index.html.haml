.clearfix
  .row
    .tg_result
      .tg_user
  .generator
    = image_tag 'generator.jpg', size: '128x128'
.clearfix
  .user_list
    - @steam_ids.each do |steam_id|
      = steam_card(steam_id)
.add_form
  %Strong
    ユーザを追加
  .form_steam_id
    = form_tag "/home/add" do
      = text_field_tag "steam_id64s[]"
      = submit_tag "追加", name: nil
  .form_group_id
    %Strong
      グループからユーザを追加
    = form_tag "/home/show_group", method: :get do
      = text_field_tag "group_id"
      = submit_tag "検索", name: nil